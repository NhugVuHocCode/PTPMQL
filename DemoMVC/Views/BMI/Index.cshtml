@model DemoMVC.Models.BMI

<h2>Tính chỉ số BMI</h2>

<form asp-action="Index" method="post">
    <label>Nhập cân nặng (kg):</label>
    <input type="number" name="Weight" step="0.1" required /><br /><br />

    <label>Nhập chiều cao (m):</label>
    <input type="double" name="Height" step="0.01" required /><br /><br />

    <input type="submit" value="Tính BMI" />
</form>

@if (Model != null && Model.Result > 0)
{
    <h3>Kết quả BMI: @Model.Result</h3>
    <h3>Phân loại: @Model.Category</h3>
}

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
